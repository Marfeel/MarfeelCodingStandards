{
  "$id": "#placements",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "placements",
  "description": "placements",
  "additionalProperties": false,
  "anyOf": [
    {
      "required": [ "adServer" ]
    }, 
    {
      "required": [ "adServers" ]
    }
  ],
  "defaultSnippets": [
    {
      "label": "Adserver placements template",
      "description": "contains required keys",
      "body": {
        "adServer": "$1"
      }
    }
  ],
  "properties": {
    "adServer": {
      "type": "string",
      "description": "Adserver defined in the adservers block of inventory.json"
    },
    "adServers": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "params": {
      "type": "object",
      "title": "Parameters",
      "description": "Defined by the adserver or from the available list https://atenea.marfeel.com/product/marfeel-platform/adops-articles/inventory-json"
    }
  }
}