{
  "$id": "#teads",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Teads adserver",
  "description": "https://github.com/ampproject/amphtml/blob/master/ads/teads.md",
  "additionalProperties": false,
  "required": [
    "type",
    "pid"
  ],
  "defaultSnippets": [
    {
      "label": "Teads template",
      "description": "contains required keys",
      "body": {
        "type": "teads",
        "pid": "$1"
      }
    }
  ],
  "properties": {
    "type": {
      "const": "teads"
    },
    "pid": {
      "type": ["integer","string"],
      "pattern": "^(\\$\\{.+\\})$",
      "title": "integer",
      "description": "example: 42266"
    },
    "layout": {
      "enum": [
        "responsive"
      ]
    },
    "width": {
      "$ref": "./types/dimension.json"
    },
    "height": {
      "$ref": "./types/dimension.json"
    }
  }
}