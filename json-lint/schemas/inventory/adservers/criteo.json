{
    "$id": "#criteo",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "title": "Criteo adserver",
    "description": "https://github.com/ampproject/amphtml/blob/master/ads/criteo.md",
    "additionalProperties": false,

    "required": [
      "type",
      "zone"
    ],

    "defaultSnippets": [
      {
        "label": "Criteo template",
        "description": "contains required keys",
        "body": {
          "type": "criteo",
          "zone": "$1"
        }
      }
    ],

    "properties": {
      "type": {"const" : "criteo"},
      "tagtype": {
        "description": "identifies the used Criteo technology. ",
        "enum": [ "rta", "passback", "standalone"]
      },
      "zone": {
        "type": ["integer","string"],
        "pattern": "^(\\$\\{.+\\})$",
        "title": "integer",
        "description": "Example : 567890"
      },
      "width": {
        "type": ["integer","string"],
        "pattern": "^(\\$\\{.+\\})$",
        "title": "integer (not required, defautl in criteo.tag (300))",
        "description": "example: 300"
      },
      "height": {
        "type": ["integer","string"],
        "pattern": "^(\\$\\{.+\\})$",
        "title": "integer (not required, default in criteo.tag (250))",
        "description": "example: 250"
      }
    }
  }
