{
  "$id": "#colombia",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Colombia adserver",
  "description": "https://github.com/ampproject/amphtml/blob/master/ads/colombia.md",
  "additionalProperties": false,
  "required": [
    "type",
    "clmb_slot",
    "clmb_position",
    "clmb_section"
  ],
  "defaultSnippets": [
    {
      "label": "Colombia template",
      "description": "contains required keys",
      "body": {
        "type": "colombia",
        "clmb_slot": "$1",
        "clmb_position": "$2",
        "clmb_section": "$3"
      }
    }
  ],
  "properties": {
    "type": { "const": "colombia"},
    "layout": { "const": "responsive"},
    "clmb_slot": {
      "type": ["integer","string"],
      "pattern": "^(\\$\\{.+\\})$", 
      "title": "Integer or parameter",
      "description": "Example : 246927"
    },
    "clmb_position": {
      "type": ["integer","string"],
      "pattern": "^(\\$\\{.+\\})$", 
      "title": "Integer or parameter",
      "description": "Example : 1"
    },
    "clmb_section": {
      "type": ["integer","string"],
      "pattern": "^(\\$\\{.+\\})$", 
      "title": "Integer or parameter",
      "description": "Example : 0"
    }
  }
}