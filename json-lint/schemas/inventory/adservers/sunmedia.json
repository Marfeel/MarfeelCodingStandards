{
    "$id": "#sunmedia",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "title": "Sunmedia adserver for touch or AMP",
    "description": "Sunmedia ad server for touch and AMP. Amp documentation: https://github.com/ampproject/amphtml/blob/master/ads/sunmedia.md",
    "additionalProperties": false,
    "oneOf": [
        {
            "required": [
                "json"
            ]
        },
        {
            "required": [
                "type",
                "cid"
            ]
        }
    ],
    "defaultSnippets": [
        {
            "label": "Sunmedia template",
            "description": "contains required keys",
            "body": {}
        }
    ],
    "properties": {
        "type": {
            "const": "sunmedia"
        },
        "cid": {
            "type": "string",
            "description": "Client ID provided by SunMedia AMP"
        },
        "cskp": {
            "type": "integer",
            "description": "data-cskp: Indicates skip button enabled"
        },
        "crst": {
            "type": "integer",
            "description": "data-crst: Indicates restart option enabled"
        },
        "json": {
            "type": "object",
            "description": "This is a pocket value for the TOUCH version of sunmedia",
            "properties": {
                "script": {
                    "type": "string"
                },
                "className": {
                    "type": "string"
                }
            }
        }
    }
}