{
    "$id": "#doubleclick",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "title": "DoubleClick adserver",
    "description": "https://github.com/ampproject/amphtml/blob/master/extensions/amp-ad-network-doubleclick-impl/amp-ad-network-doubleclick-impl-internal.md",
    "additionalProperties": false,

    "required": [
      "type",
      "slot"
    ],

    "defaultSnippets": [
      {
        "label": "DoubleClick template",
        "description": "contains required keys",
        "body": {
          "type": "doubleclick",
          "slot": "$1"
        }
      }
    ],

    "properties": {
      "type": {"const" : "doubleclick"},
      "slot": {
        "type": "string"
      },
      "width": {
        "type": ["integer","string"],
        "pattern": "^(\\$\\{.+\\})$",
        "title": "integer",
        "description": "example: 300"
      },
      "height": {
        "type": ["integer","string"],
        "pattern": "^(\\$\\{.+\\})$",
        "title": "integer",
        "description": "example: 250"
      },
      "multi-size": {
        "type": "string",
        "title": "String of coma separated sizes",
        "description": "example: 700x90,700x60,300x25 https://github.com/ampproject/amphtml/blob/master/extensions/amp-ad-network-doubleclick-impl/multi-size.md",
        "pattern": "^(\\d+x\\d+)(,\\d+x\\d+)*$|^(\\$\\{.+\\})$"
      },
      "multi-size-validation": {
        "type": ["boolean","string"],
        "title": "By default this is assumed to be true.",
        "pattern": "^(\\$\\{.+\\})$",
        "description": "https://github.com/ampproject/amphtml/blob/master/extensions/amp-ad-network-doubleclick-impl/multi-size.md"
      },
      "layout": {
        "enum": [ "responsive"]
      },
      "json": {
        "type": "object",
        "properties": {
          "targeting" : {
            "type": "object"
          }
        }
      },
      "options": {
        "type": "object",
        "properties": {
          "enableSingleRequest": {
            "type": "boolean"
          }
        }
      }
    }
  }
