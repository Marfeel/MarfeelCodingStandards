{
  "$id": "#smartadserver",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "SmartAdserver adserver",
  "description": "https://github.com/ampproject/amphtml/blob/master/ads/smartadserver.md",
  "additionalProperties": false,
  "required": [
    "type",
    "site",
    "page",
    "format",
    "domain"
  ],
  "defaultSnippets": [
    {
      "label": "SmartAdserver template",
      "description": "contains required keys",
      "body": {
        "type": "smartadserver",
        "site": "$1",
        "page": "$2",
        "format": "$3",
        "domain": "$4"
      }
    }
  ],
  "properties": {
    "type": {
      "enum": [
        "smartadserver"
      ]
    },
    "site": {
      "type": "string",
      "title": "String of digits",
      "description": "Your Smart AdServer Site ID --> Example : 246927",
      "pattern": "^(\\d|\\$\\{.+\\})+$"
    },
    "page": {
      "type": "string",
      "title": "String of digits",
      "description": "Your Smart AdServer Page ID --> Example : 714388",
      "pattern": "^(\\d|\\$\\{.+\\})+$"
    },
    "format": {
      "type": "string",
      "description": "Your Smart AdServer Format ID --> Example : 38952",
      "pattern": "^(\\d|\\$\\{.+\\})+$"
    },
    "domain": {
      "type": "string",
      "description": "Your Smart AdServer call domain : https://<YourSmartAdServerDomain>"
    },
    "width": {
      "type": "string",
      "title": "String of digits",
      "pattern": "^(\\d|\\$\\{.+\\})+$"
    },
    "height": {
      "type": "string",
      "title": "String of digits",
      "pattern": "^(\\d|\\$\\{.+\\})+$"
    },
    "target": {
      "type": "string",
      "description": "Your targeting string (not required) --> Exmple: foo=bar"
    },
    "tag": {
      "description": "An ID for the tag containing the ad"
    }
  }
}