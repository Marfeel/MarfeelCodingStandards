{
    "$id": "#sharethrough",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "title": "Sharethrough adserver",
    "description": "https://github.com/ampproject/amphtml/blob/master/ads/sharethrough.md",
    "additionalProperties": false,
    "required": [
        "type",
        "pkey"
    ],
    "defaultSnippets": [
        {
            "label": "Sharethrough template",
            "description": "contains required keys",
            "body": {
                "type": "sharethrough",
                "pkey": "$1"
            }
        }
    ],
    "properties": {
        "type": {
            "const": "sharethrough"
        },
        "pkey": {
            "type": 
                "string",
            "description": " (String, non-empty) The unique identifier for your placement"
        },
        "width": {
            "$ref": "./types/dimension.json"
        },
        "height": {
            "$ref": "./types/dimension.json"
        },
        "layout": {
            "$ref": "./types/layout.json"
        }
    }
} 