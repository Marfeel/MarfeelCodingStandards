{
  "$id": "#smartclip",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Smartclip adserver",
  "description": "https://github.com/ampproject/amphtml/blob/master/ads/smartclip.md",
  "additionalProperties": false,
  "required": [
    "type",
    "plc",
    "sz"
  ],
  "defaultSnippets": [
    {
      "label": "Smartclip template",
      "description": "contains required keys",
      "body": {
        "type": "smartclip",
        "plc": "$1",
        "sz": "$2"
      }
    }
  ],
  "properties": {
    "type": {
      "const": "smartclip"
    },
    "plc": {
      "type": ["integer","string"],
      "pattern": "^(\\$\\{.+\\})$", 
      "title": "integer",
      "description": "Example: 68005"
    },
    "sz": {
      "type": "string"
    },
    "extra": {
      "type": "string"
    }
  }
}