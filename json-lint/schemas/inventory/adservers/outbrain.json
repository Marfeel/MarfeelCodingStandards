{
    "$id": "#outbrain",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "title": "Outbrain adserver",
    "description": "https://github.com/ampproject/amphtml/blob/master/ads/outbrain.md",
    "additionalProperties": false,

    "required": [
      "type",
      "widgetIds"
    ],

    "defaultSnippets": [
      {
        "label": "Outbrain template",
        "description": "contains required keys",
        "body": {
          "type": "outbrain",
          "widgetIds": "$1",
          "layout": "$2"
        }
      }
    ],

    "properties": {
      "type": {"const" : "outbrain"},
      "layout": {
        "enum": [ "responsive"]
      },
      "src": {
        "type": "string"
      },
      "styleFile": {
        "type": "string",
        "title": "Option to pass CSS file",
        "description": "Example: https://bc.marfeelcache.com/statics/www.thesocialpost.it/index/resources/outbrain.css"
      },
      "widgetIds": {
        "type": "string"
      },
      "obTemplate": {
        "type": "string",
        "title": "Parameter for Web config"
      },
      "customStyles": {
        "type": "string",
        "title": "Option to pass custom CSS, parameter for Web config"
      },
      "width": {
        "type": ["integer","string"],
        "pattern": "^(\\$\\{.+\\})$",
        "title": "integer",
        "description": "example: 300 (not required, default in outbrain.tag (100))"
      },
      "height": {
        "type": ["integer","string"],
        "pattern": "^(\\$\\{.+\\})$",
        "title": "integer",
        "description": "example: 250 (not required, default in outbrain.tag(100))"
      },
      "disableCustomStyles": {
        "type": "boolean",
        "title": "Option to deactivate Marfeel CSS, false by default"
      }
    }
  }
