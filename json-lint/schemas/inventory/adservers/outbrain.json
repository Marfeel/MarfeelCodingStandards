{
    "$id": "#outbrain",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "title": "Outbrain adserver",
    "description": "https://github.com/ampproject/amphtml/blob/master/ads/outbrain.md",
    "additionalProperties": false,

    "required": [
      "type",
      "layout"
    ],
    "anyOf": [
      {
        "required": ["widgetIds"]
      },
      {
        "required": ["widgetids"]
      }
    ],

    "defaultSnippets": [
      {
        "label": "Outbrain template",
        "description": "contains required keys",
        "body": {
          "type": "outbrain",
          "widgetIds": "$1",
          "layout": "$2"
        }
      }
    ],

    "properties": {
      "type": {
        "enum": [ "outbrain" ]
      },
      "layout": {
        "enum": [ "responsive"]
      },
      "src": {
        "type": "string"
      },
      "styleFile": {
        "type": "string",
        "title": "Option to pass CSS file",
        "description": "Example: https://bc.marfeelcache.com/statics/www.thesocialpost.it/index/resources/outbrain.css"
      },
      "widgetIds": {
        "type": "string"
      },
      "widgetids": {
        "type": "string"
      },
      "width": {
        "type": ["string", "number"],
        "title": "String of digits or number",
        "description": "example: 300 (not required, default in outbrain.tag (100))",
        "pattern": "^(\\d|\\$\\{.+\\})+$" 
      },
      "height": {
        "type": ["string", "number"],
        "title": "String of digits or number",
        "description": "example: 250 (not required, default in outbrain.tag(100))",
        "pattern": "^(\\d|\\$\\{.+\\})+$" 
      }
    }
  }