{
  "$id": "#revcontent",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Revcontent adserver",
  "description": "https://github.com/ampproject/amphtml/blob/master/ads/revcontent.md",
  "additionalProperties": false,
  "required": [
    "type",
    "id",
    "wrapper"
  ],
  "defaultSnippets": [
    {
      "label": "Revcontent template",
      "description": "contains required keys",
      "body": {
        "type": "revcontent",
        "id": "$1",
        "wrapper": "$2"
      }
    }
  ],
  "properties": {
    "type": {
      "enum": [
        "revcontent"
      ]
    },

    "id": {
      "type": ["integer","string"],
      "pattern": "^(\\$\\{.+\\})$",
      "title": "integer"
    },
    "wrapper": {
      "type": "string"
    },
    "heights": {
      "type": "string"
    },
    "width": {
      "type": ["integer","string"],
      "pattern": "^(\\$\\{.+\\})$",
      "title": "integer",
      "description": "example: 300 (not required, default in outbrain.tag (100))"
    },
    "height": {
      "type": ["integer","string"],
      "pattern": "^(\\$\\{.+\\})$",
      "title": "String of digits",
      "description": "example: 250 (not required, default in outbrain.tag(100))"
    },
    "layout": {
      "type": "string"    
    }
  }
}
