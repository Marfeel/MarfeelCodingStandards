{
  "$id": "#AdThrive",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "AdThrive adserver",
  "description": "https://github.com/ampproject/amphtml/blob/master/ads/adthrive.md",
  "additionalProperties": false,
  "required": [
    "type",
    "site-id"
  ],
  "defaultSnippets": [
    {
      "label": "AdThrive template",
      "description": "contains required keys",
      "body": {
        "type": "adThrive",
        "site-id": "$1"
      }
    }
  ],
  "properties": {
    "type": {
      "const": "adThrive"
    },
    "site-id": {
      "type": "string"
    },
    "ad-unit": {
      "type": "string"
    },
    "sizes": {
      "type": "string"
    },
    "json": {
      "properties": {
        "location": {
          "type": "string"
        },
        "sticky": {
          "type": "string"
        }
      },
      "description": "Json object for touch parameters"
    }
  }
}
