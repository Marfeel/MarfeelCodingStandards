{
    "$id": "#mgid",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "title": "Mgid adserver for TOUCH only",
    "description": "Mgid ad server for TOUCH only",
    "additionalProperties": true,
    "required": [
        "type"
    ],
    "defaultSnippets": [
        {
            "label": "Mgid web template",
            "description": "Mgid for touch",
            "body": {
                "type": "mgid",
                "json": {
                    "tenantUrl": "$1",
                    "clientCode": "$2",
                    "divIDCode": "$3",
                    "firstParam" :"$4",
                    "secondParam" :"$5"
                }
            }
        },
        {
            "label": "Mgid amp template",
            "description": "Mgid for AMP",
            "body": {
                "type": "mgid",
                "publisher": "$1",
                "widget": "$2",
                "container": "$3",
                "height": "$4",
                "width": "$5"
            }
        }
    ],
    "properties": {
        "type": {
            "const": "mgid"
        },
        "json": {
            "type": "object",
            "required": [
                "tenantUrl",
                "clientCode",
                "divIDCode"
            ],
            "properties": {
                "tenantUrl": {
                    "type": "string"
                },
                "clientCode": {
                    "type": "string"
                },
                "divIDCode": {
                    "type": "string"
                },
                "firstParam": {
                    "type": "string"
                },
                "secondParam": {
                    "type": "string"
                }
            }
        },
        "publisher": {
            "type": "string"
        },
        "widget": {
            "type": "string"
        },
        "container": {
            "type": "string"
        },
        "height": {
            "type": "string"
        },
        "width": {
            "type": "string"
        }
    }
}
