{
    "$id": "#mgid",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "title": "Mgid adserver for TOUCH only",
    "description": "Mgid ad server for TOUCH only",
    "additionalProperties": false,
    "required": [
        "type",
        "json"
    ],
    "defaultSnippets": [
        {
            "label": "Mgid template",
            "description": "contains required keys",
            "body": {
                "type": "mgid",
                "json": {
                    "tenantUrl": "$1",
                    "clientCode": "$2",
                    "divIDCode": "$3",
                    "firstParam" :"$4",
                    "secondParam" :"$5"
                }
            }
        }
    ],
    "properties": {
        "type": {
            "const": "mgid"
        },
        "json": {
            "type": "object",
            "required": [
                "tenantUrl",
                "clientCode",
                "divIDCode"
            ],
            "properties": {
                "tenantUrl": {
                    "type": "string"
                },
                "clientCode": {
                    "type": "string"
                },
                "divIDCode": {
                    "type": "string"
                },
                "firstParam": {
                    "type": "string"
                },
                "secondParam": {
                    "type": "string"
                }
            }
        }
    }
}
