{
    "$id": "#engageya",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "title": "Engageya adserver",
    "description": "https://github.com/ampproject/amphtml/blob/master/ads/engageya.md",
    "additionalProperties": false,
    "required": [
        "widgetIds",
        "websiteId",
        "publisherId"
    ],
    "defaultSnippets": [
        {
            "label": "Engageya template",
            "description": "contains required keys",
            "body": {
                "type": "engageya",
                "layout": "responsive",
                "widgetIds": "$1",
                "websiteId": "$2",
                "publisherId": "$3"
            }
        }
    ],
    "properties": {
        "type": {
            "const": "engageya"
        },
        "layout": {
            "$ref": "./types/layout.json"
        },
        "widgetIds": {
            "type": "string"
        },
        "websiteId": {
            "type": "string"
        },
        "publisherId": {
            "type": "string"
        },
        "url": {
            "type": "string"
        },
        "ampUrl": {
            "type": "string"
        },
        "styleCSS": {
            "type": "string"
        },
        "width": {
            "$ref": "./types/dimension.json"
        },
        "height": {
            "$ref": "./types/dimension.json"
        }
    }
}