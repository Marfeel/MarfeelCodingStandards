{
    "$id": "#nativo",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "title": "Nativo adserver",
    "description": "https://github.com/ampproject/amphtml/blob/master/ads/nativo.md",
    "additionalProperties": false,
    "required": [
        "type",
        "request-url"
    ],
    "defaultSnippets": [
        {
            "label": "Nativo template",
            "description": "contains required keys",
            "body": {
                "type": "nativo",
                "request-url": "$1"
            }
        }
    ],
    "properties": {
        "type": {
            "const": "nativo"
        },
        "request-url": {
            "type": "string"
        },
        "layout": {
            "$ref": "./types/layout.json"
        },
        "width": {
            "$ref": "./types/dimension.json"
        },
        "height": {
            "$ref": "./types/dimension.json"
        },
        "premium": {
            "type": "string",
            "description": "Switches to premium."
        }
    }
}  