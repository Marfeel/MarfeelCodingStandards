{
    "$id": "#contentad",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "title": "ContentAd adserver",
    "description": "https://github.com/ampproject/amphtml/blob/master/ads/contentad.md",
    "additionalProperties": false,
    "required": [
        "type",
        "id",
        "d",
        "wid",
        "width",
        "height"
    ],
    "defaultSnippets": [
        {
            "label": "ContentAd template",
            "description": "contains required keys",
            "body": {
                "type": "contentad",
                "id": "$1",
                "d": "$2",
                "wid": "$3",
                "width": "${4:required for AMP. Ignored in TOUCH}",
                "height": "${5:required for AMP. Ignored in TOUCH}"
            }
        }
    ],
    "properties": {
        "type": {
            "const": "contentad"
        },
        "id": {
            "type": "string",
            "description": "The unique identifier for your account (API Key)."
        },
        "d": {
            "type": "string",
            "description": "The unique identifier for your domain."
        },
        "wid": {
            "type": "string",
            "description": "The unique identifier for your widget."
        },
        "width": {
            "type": "integer",
            "title": "Width. Required for AMP",
            "description": "Ignored in TOUCH. TOUCH Example: 0"
        },
        "height": {
            "type": "integer",
            "title": "Height. Required for AMP",
            "description": "Ignored in TOUCH. TOUCH Example: 0"
        }
    }
}