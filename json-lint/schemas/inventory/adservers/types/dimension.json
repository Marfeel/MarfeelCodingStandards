{
    "$id": "#dimension",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "oneOf": [
        {
            "type": "integer"
        },
        {
            "type": "string",
            "title": "Width or Height",
            "description": "Example: 300",
            "pattern": "^(\\$\\{.+\\})$"
        },
        {
            "type": "string",
            "pattern": "^100vw$"
        }
    ]
}