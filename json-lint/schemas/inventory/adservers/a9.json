{
  "$id": "#a9",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Amazon adserver",
  "description": "https://github.com/ampproject/amphtml/blob/master/ads/a9.md",
  "additionalProperties": false,
  "required": [
    "type",
    "adinstanceid",
    "amzn_assoc_ad_mode"
  ],
  "defaultSnippets": [
    {
      "label": "Amazon template",
      "description": "contains required keys",
      "body": {
        "type": "a9",
        "amzn_assoc_ad_mode": "$1"
      }
    }
  ],
  "properties": {
    "type": {
      "const": "a9"
    },
    "width": {
      "$ref": "./types/dimension.json"
    },
    "height": {
      "$ref": "./types/dimension.json"
    },
    "amzn_assoc_ad_mode": {
      "enum": [
        "search",
        "manual",
        "auto"
      ]
    },
    "recomtype": {
      "type": "string"
    },
    "adinstanceid": {
      "type": "string"
    },
    "regionurl": {
      "type": "string"
    },
    "divid": {
      "type": "string"
    },
    "amzn_assoc_asins": {
      "type": "string"
    },
    "amzn_assoc_placement": {
      "type": "string"
    },
    "amzn_assoc_search_bar": {
      "type": "boolean"
    },
    "amzn_assoc_tracking_id": {
      "type": "string"
    },
    "amzn_assoc_search_bar_position": {
      "type": "string"
    },
    "amzn_assoc_ad_type": {
      "type": "string"
    },
    "amzn_assoc_marketplace": {
      "type": "string"
    },
    "amzn_assoc_region": {
      "type": "string"
    },
    "amzn_assoc_title": {
      "type": "string"
    },
    "amzn_assoc_default_search_phrase": {
      "type": "string"
    },
    "amzn_assoc_default_category": {
      "type": "string"
    },
    "amzn_assoc_linkid": {
      "type": "string"
    }
  }
}