{
    "$id": "#giraff",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "title": "Giraff adserver",
    "description": "https://github.com/ampproject/amphtml/blob/master/ads/giraff.md",
    "additionalProperties": false,
    "required": [
      "type",
      "widget-id",
      "block-name"
    ],
    "defaultSnippets": [
      {
        "label": "Giraff template",
        "description": "contains required keys",
        "body": {
          "type": "giraff",
          "widget-id": "$1",
            "block-name": "$2"
        }
      }
    ],
    "properties": {
      "type": {
        "const": "giraff"
      },
      "widget-id": {
        "type": "string"
      },
      "block-name": {
        "type": "string"
      },
      "width": {
        "$ref": "./types/dimension.json"
      },
      "height": {
        "$ref": "./types/dimension.json"
      }
    }
  }
