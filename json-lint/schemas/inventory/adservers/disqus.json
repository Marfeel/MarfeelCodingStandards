{
    "$id": "#disqus",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "title": "Disqus adserver for TOUCH only",
    "description": "Disqus ad server for TOUCH only",
    "additionalProperties": false,
    "required": [
        "type",
        "shortName",
        "forum",
        "category",
        "tid",
        "position"
    ],
    "defaultSnippets": [
        {
            "label": "Disqus template",
            "description": "contains required keys",
            "body": {
                "type": "disqus",
                "shortName": "$1",
                "forum": "$2",
                "category": "$3",
                "tid": "$3",
                "position": "$4"
            }
        }
    ],
    "properties": {
        "type": {
          "const": "disqus"
        },
        "shortName": {
            "type": "string",
            "description": "Publisher identifier"
        },
        "forum": {
            "type": "string",
            "description": "Feed identifier. Let Disqus know which comment widget is requesting ads."
        },
        "category": {
            "type": "string",
            "description": "Category of the forum (culture, tech, etc. )."
        },
        "tid": {
            "type": "string",
            "description": "Tenant identifier."
        },
        "position": {
            "type": "string",
            "description": "The placement of the ad, relative to comments widget."
        },
        "json": {
            "type": "object"
        }
    }
}