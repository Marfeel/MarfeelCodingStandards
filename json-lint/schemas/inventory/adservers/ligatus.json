{
  "$id": "#ligatus",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Ligatus adserver",
  "description": "https://github.com/ampproject/amphtml/blob/master/ads/ligatus.md",
  "additionalProperties": false,
  "required": [
    "type",
    "src"
  ],
  "defaultSnippets": [
    {
      "label": "Ligatus template",
      "description": "contains required keys",
      "body": {
        "type": "ligatus",
        "src": "$1"
      }
    }
  ],
  "properties": {
    "type": {
      "const": "ligatus"
    },
    "src": {
      "type": "string"
    },
    "width": {
      "$ref": "./types/dimension.json"
    },
    "height": {
      "$ref": "./types/dimension.json"
    },
    "json": {
      "type": "object",
      "properties": {
        "containerId" : {
          "type": "string"
        }
      }
    }
  }
}