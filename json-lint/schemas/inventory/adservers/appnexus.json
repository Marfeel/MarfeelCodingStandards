{
    "$id": "#appnexus",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "title": "Appnexus adserver",
    "description": "https://github.com/ampproject/amphtml/blob/master/ads/appnexus.md",
    "additionalProperties": false,
    "required": [
        "type"
    ],
    "oneOf": [
        {
            "required": [
                "tagid"
            ]
        },
        {
            "required": [
                "member"
            ]
        },
        {
            "required": [
                "target"
            ]
        }
    ],
    "defaultSnippets": [
        {
            "label": "Appnexus template",
            "description": "contains required keys",
            "body": {
                "type": "appnexus"
            }
        }
    ],
    "properties": {
        "type": {
            "const": "appnexus"
        },
        "tagid": {
            "type": [
                "integer",
                "string"
            ],
            "title": "Integer or parameter",
            "description": "example: 6063968",
            "pattern": "^(\\$\\{.+\\})$"
        },
        "member": {
            "type": [
                "integer",
                "string"
            ],
            "title": "Integer or parameter",
            "description": "example: 958",
            "pattern": "^(\\$\\{.+\\})$"
        },
        "target": {
            "type": [
                "string"
            ],
            "title": "Integer or parameter",
            "description": "example: apn_ad_1234"
        },
        "code": {
            "type": [
                "string"
            ],
            "description": "example: inv_code_test"
        },
        "debug": {
            "type": [
                "boolean"
            ],
            "description": "example: true | false"
        },
        "width": {
            "$ref": "./types/dimension.json"
        },
        "height": {
            "$ref": "./types/dimension.json"
        }
    }
}