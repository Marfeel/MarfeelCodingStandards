{
    "$id": "#adsense",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "title": "Adsense adserver",
    "description": "https://github.com/ampproject/amphtml/blob/master/ads/google/adsense.md",
    "additionalProperties": false,

    "required": [
      "type",
      "ad-client",
      "ad-slot"
    ],

    "defaultSnippets": [
      {
        "label": "Adsense template",
        "description": "contains required keys",
        "body": {
          "type": "adsense",
          "ad-client": "$1",
          "ad-slot": "$2",
          "width": "$3",
          "height": "$4"
        }
      }
    ],

    "properties": {
      "type": { "const" : "adsense" },
      "ad-client": {
        "anyOf": [
            {
              "type": "string",
              "title": "Publisher ID.",
              "description": "example: ca-pub-1234567891234567",
              "pattern": "^(ca-pub-(\\d+|\\$\\{.+\\}))$"
            },
            {
              "type": "string",
              "title": "Publisher ID.",
              "description": "we are using a parameter",
              "pattern": "^(\\$\\{.+\\})$"
            }
        ]
      },
      "ad-slot": {
        "type": ["integer","string"],
        "title": "Integer or parameter",
        "description": "example: 9667904487",
        "pattern": "^(\\$\\{.+\\})$"
      },
      "ad-host": {
        "type": "string"
      },
      "adtest": {
        "type": "string"
      },
      "tag-origin": {
        "type": "string"
      },
      "auto-format": { "const" : "rspv" },
      "width": {
        "$ref": "./types/dimension.json"
      },
      "height": {
        "$ref": "./types/dimension.json"
      },
      "full-width": {
        "type": ["boolean", "string"],
        "pattern": "^(\\$\\{.+\\})$"
      },
      "ad-format": {
        "enum": [
          "auto",
          "fluid",
          "autorelaxed"
        ]
      }
    }
  }