{
    "$id": "#adsense",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "title": "Adsense adserver",
    "description": "https://github.com/ampproject/amphtml/blob/master/ads/google/adsense.md",
    "additionalProperties": false,

    "required": [
      "type",
      "ad-client",
      "ad-slot"
    ],

    "defaultSnippets": [
      {
        "label": "Adsense template",
        "description": "contains required keys",
        "body": {
          "type": "adsense",
          "ad-client": "$1",
          "ad-slot": "$2",
          "width": "$3",
          "height": "$4"
        }
      }
    ],

    "properties": {
      "type": { "const" : "adsense" },
      "ad-client": {
        "anyOf": [
            {
              "type": "string",
              "title": "Publisher ID.",
              "description": "example: ca-pub-1234567891234567",
              "pattern": "^(ca-pub-(\\d+|\\$\\{.+\\}))$"
            }, 
            {
              "type": "string",
              "title": "Publisher ID.",
              "description": "we are using a parameter",
              "pattern": "^(\\$\\{.+\\})$" 
            }
        ]
      },
      "ad-slot": {
        "type": ["integer","string"],
        "title": "Integer or parameter",
        "description": "example: 9667904487",
        "pattern": "^(\\$\\{.+\\})$" 
      },
      "ad-host": {
        "type": "string"
      },
      "adtest": {
        "type": "string"
      },
      "tag-origin": {
        "type": "string"
      },
      "auto-format": { "const" : "rspv" },
      "width": {
        "type": ["integer","string"],
        "title": "String of digits ( if not set, default is 300 )",
        "description": "example: 300",
        "pattern": "^(\\$\\{.+\\})$"  
      },
      "height": {
        "type": ["integer","string"],
        "title": "String of digits ( if not set, default is 250 )",
        "description": "example: 250",
        "pattern": "^(\\$\\{.+\\})$" 
      }
    }
  }