{
    "$id": "#marfeel",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "title": "Marfeel adserver",
    "description": "marfeelinventory.*.json defines the marfeel position DFP. We can use this adserver of the inventory to pass extra targetings and experimental parameters",
    "additionalProperties": false,

    "not": {
        "anyOf": [
            {
                "required": [
                    "type"
                ]
            },
            {
                "required": [
                    "slot"
                ]
            },
            {
                "required": [
                    "width"
                ]
            },
            {
                "required": [
                    "height"
                ]
            },
            {
                "required": [
                    "multi_size"
                ]
            },
            {
                "required": [
                    "multi_size_validation"
                ]
            },
            {
                "required": [
                    "force_safeframe"
                ]
            }
        ]
    },

    "properties": {
        "atomic_slot": {
            "type": "string"
        },
        "json": {
            "type": "object",
            "properties": {
                "targeting": {
                    "type": "object",
                    "properties": {
                        "tenant_dfp_slot": {
                            "type": "string"
                        },
                        "tenant_dfp_size": {
                            "type": "string"
                        },
                        "pepito": {
                            "type": "string"
                        }
                    }
                }
            }
        }
    }
}