{
    "$id": "#spotx",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "title": "Spotx adserver",
    "description": "https://github.com/ampproject/amphtml/blob/master/ads/spotx.md",
    "additionalProperties": false,
    "required": [
      "type",
      "plc",
      "sz"
    ],
    "defaultSnippets": [
      {
        "label": "Spotx template",
        "description": "contains required keys",
        "body": {
          "type": "spotx",
          "width": "$1",
          "height": "$2",
          "spotx_channel_id": "$3"
        }
      }
    ],
    "properties": {
      "type": {
        "const": "spotx"
      },
      "width": {
        "type": ["integer","string"],
        "pattern": "^(\\$\\{.+\\})$", 
        "title": "integer",
        "description": "Example: 68005"
      },
      "height": {
        "type": "string"
      },
      "spotx_channel_id": {
        "type": "string"
      },
      "spotx_ad_format": {
        "type": "string"
      },
      "spotx_content_width": {
        "type": "string"
      },
      "spotx_content_height": {
        "type": "string"
      },
      "spotx_unmute_on_mouse": {
        "type": "string"
      },
      "spotx_ad_volume": {
        "type": "string"
      }
    }
  }