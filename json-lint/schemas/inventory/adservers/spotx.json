{
    "$id": "#spotx",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "title": "Spotx adserver",
    "description": "https://github.com/ampproject/amphtml/blob/master/ads/spotx.md",
    "additionalProperties": false,
    "required": [
        "type",
        "width",
        "heigth",
        "spotx_channel_id"
    ],
    "defaultSnippets": [{
        "label": "Spotx template",
        "description": "contains required keys",
        "body": {
            "type": "spotx",
            "width": "$1",
            "height": "$2",
            "spotx_channel_id": "$3"
        }
    }],
    "properties": {
        "type": {
            "const": "spotx"
        },
        "width": {
            "$ref": "./types/dimension.json"
        },
        "height": {
            "$ref": "./types/dimension.json"
        },
        "spotx_channel_id": {
            "type": ["integer", "string"]
        },
        "spotx_ad_format": {
            "type": "string"
        },
        "spotx_content_width": {
            "type": "string"
        },
        "spotx_content_height": {
            "type": "string"
        },
        "spotx_unmute_on_mouse": {
            "type": "string"
        },
        "spotx_ad_volume": {
            "type": "string"
        }
    }
}