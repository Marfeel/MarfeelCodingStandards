{
    "$id": "#richaudience",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "title": "RichAudience adserver",
    "description": "RichAudience adserver: supported only in web",
    "additionalProperties": true,
    "required": [
        "type",
        "id"
    ],
    "defaultSnippets": [
        {
            "label": "RichAudience template",
            "description": "contains required keys",
            "body": {
                "type": "richaudience",
                "id": "$1",
                "options": {}
            }
        }
    ],
    "properties": {
        "type": {
            "const": "richaudience"
        },
        "id": {
            "type": [
                "string"
            ],
            "title": "id string"
        },
        "options": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "type": {
                    "type": "string"
                },
                "init": {
                    "type": "string"
                },
                "end": {
                    "type": "string"
                },
                "skin": {
                    "type" : "string"
                }
            }
        }
    }
}