{
    "$id": "#contentza",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "title": "Contentza adserver for TOUCH only",
    "description": "Contentza ad server for TOUCH only",
    "additionalProperties": false,
    "required": [
        "type",
        "json"
    ],
    "defaultSnippets": [
        {
            "label": "Contentza template",
            "description": "contains required keys",
            "body": {
                "type": "contentza",
                "id": "$1"
            }
        }
    ],
    "properties": {
        "type": {
            "const": "contentza"
        },
        "json": {
            "type": "object",
            "properties": {
                "id" : {
                    "type": "string"
                }
            }
        }
    }    
}