{
    "$id": "#customTracker",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "description": "Define a custom Metrics Provider",
    "title": "Custom Metrics Provider",
    "type": "array",
    "items": {
        "anyOf": [{
                "additionalProperties": false,
                "properties": {
                    "type": {
                        "const": "js"
                    },
                    "file": {
                        "type": "string"
                    },
                    "params": {
                        "type": "object"
                    },
                    "platforms": {
                        "$ref" : "../properties/platforms-touch.json"
                    }
                },
                "required": ["type", "file", "platforms"]
            },
            {
                "additionalProperties": false,
                "properties": {
                    "type": {
                        "const": "json"
                    },
                    "jsonContent": {
                        "type": "string"
                    },
                    "typeAttribute": {
                        "type": "string"
                    },
                    "idAttribute": {
                        "type": "string"
                    },
                    "platforms": {
                        "$ref" : "../properties/platforms-amp.json"
                    }
                },
                "required": ["type", "jsonContent", "typeAttribute", "idAttribute", "platforms"]
            },
            {
                "additionalProperties": false,
                "properties": {
                    "type": {
                        "const": "jsp"
                    },
                    "srcPath": {
                        "type": "string"
                    },
                    "platforms": {
                        "$ref" : "../properties/platforms-amp.json"
                    }
                },
                "required": ["type", "srcPath", "platforms"]
            },
            {
                "additionalProperties": false,
                "properties": {
                    "type": {
                        "const": "pixel"
                    },
                    "pixelSrc": {
                        "type": "string"
                    },
                    "platforms": {
                        "$ref" : "../properties/platforms-amp.json"
                    }
                },
                "required": ["type", "pixelSrc", "platforms"]
            }
        ]
    },
    "defaultSnippets": [
        {
            "body": [{
                "type": "$1"
            }]
        }
    ]
}
