{
    "$id": "/properties/googleAnalytics",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "description": "Define googleAnalytics as Metrics Provider",
    "title": "GoogleAnalytics Metrics Provider",
    "type": "array",
    "items": {
        "additionalProperties": false,
        "properties": {
            "name": {
                "description": "Name of the metrics provider",
                "title": "Metrics Provider Name",
                "type": "string"
            },
            "uaCode": {
                "description": "uaCode",
                "pattern": "^(UA-[0-9]{6,}-[0-9]+)$",
                "title": "uaCode",
                "type": "string"
            },
            "dimensions": {
                "description": "Custom static dimensions",
                "type": "object",
                "title": "dimensions",
                "additionalProperties": false,
                "patternProperties": {
                    "^dimension[0-9]{1,}$": {
                        "title": "dimesion",
                        "type": "string"
                    }
                }
            },
            "platforms": {
                "$ref" : "../properties/platforms-all.json"
            }
        },
        "required": [
            "name",
            "uaCode"
        ]
    },
    "defaultSnippets": [
        {
            "body": [{
                "name": "$1",
                "uaCode": "UA-$2"
            }]
        }
    ]
}
