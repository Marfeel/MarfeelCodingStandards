{
    "$id": "/properties/alexa",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "description": "Define alexa as Metrics Provider",
    "title": "alexa Metrics Provider",
    "type": "array",
    "items": {
        "additionalProperties": false,
        "properties": {
            "name": {
                "description": "Name of the metrics provider",
                "title": "Metrics Provider Name",
                "type": "string"
            },
            "acctNum": {
                "type": "string"
            },
            "domain": {
                "type": "string"
            },
            "platforms": {
                "$ref" : "../properties/platforms-all.json"
            }
        },
        "required": [
            "name",
            "acctNum",
            "domain"
        ]
    },
    "defaultSnippets": [
        {
            "body": [{
                "name": "$1",
                "acctNum": "$2",
                "domain": "$3"
            }]
        }
    ]
}
