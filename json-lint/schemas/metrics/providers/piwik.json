{
    "$id": "/properties/piwik",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "description": "Define Piwik as Metrics Provider",
    "title": "AdobeNative Metrics Provider",
    "type": "array",
    "items": {
        "additionalProperties": false,
        "properties": {
            "name": {
                "description": "Name of the metrics provider",
                "title": "Metrics Provider Name",
                "type": "string"
            },
            "piwikUrl": {
                "type": "string"
            },
            "siteId": {
                "type": "string"
            },
            "platforms": {
                "$ref" : "../properties/platforms-all.json"
            }
        },
        "required": [
            "name",
            "piwikUrl",
            "siteId"
        ]
    },
    "defaultSnippets": [
        {
            "body": [{
                "name": "$1",
                "piwikUrl": "$2",
                "siteId": "$3"
            }]
        }
    ]
}
