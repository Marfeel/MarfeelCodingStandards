{
	"$id": "/properties/blueKai",
	"$schema": "http://json-schema.org/draft-07/schema#",
	"description": "Define BlueKai as Metrics Provider",
	"title": "BlueKai Metrics Provider",
	"type": "array",
	"items": {
		"additionalProperties": false,
		"properties": {
			"name": {
				"description": "Name of the metrics provider",
				"title": "Metrics Provider Name",
				"type": "string"
			},
			"id": {
				"type": "string"
			},
			"metadataName": {
				"type": "string"
			},
			"platforms": {
				"$ref": "../properties/platforms-touch.json"
			}
		},
		"required": [
			"name",
			"id"
		]
	},
	"defaultSnippets": [
		{
			"body": [
				{
					"name": "$1",
					"id": "$2",
					"metadataName": "$3"
				}
			]
		}
	]
}
