{
    "$id": "/properties/jetpack",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "description": "Define Jetpack as Metrics Provider",
    "title": "Jetpack Metrics Provider",
    "type": "array",
    "items": {
        "additionalProperties": false,
        "properties": {
            "name": {
                "description": "Name of the metrics provider",
                "title": "Metrics Provider Name",
                "type": "string"
            },
            "blog": {
                "type": "string"
            },
            "tz": {
                "type": "string"
            },
            "platforms": {
                "$ref" : "../properties/platforms-all.json"
            }
        },
        "required": [
            "name",
            "blog",
            "tz"
        ]
    },
    "defaultSnippets": [
        {
            "body": [{
                "name": "$1",
                "blog": "$2",
                "tz": "$3"
            }]
        }
    ]
}
