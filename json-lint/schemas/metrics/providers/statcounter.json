{
    "$id": "/properties/statcounter",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "description": "Define statcounter as Metrics Provider",
    "title": "Statcounter Metrics Provider",
    "type": "array",
    "items": {
        "additionalProperties": false,
        "properties": {
            "name": {
                "description": "Name of the metrics provider",
                "title": "Metrics Provider Name",
                "type": "string"
            },
            "project": {
                "type": "string"
            },
            "security": {
                "type": "string"
            },
            "flags": {
                "type": "string"
            },
            "platforms": {
                "$ref" : "../properties/platforms-all.json"
            }
        },
        "required": [
            "name",
            "project",
            "security",
            "flags"
        ]
    },
    "defaultSnippets": [
        {
            "body": [{
                "name": "$1",
                "project": "$2",
                "security": "$3",
                "flags": "$4"
            }]
        }
    ]
}
