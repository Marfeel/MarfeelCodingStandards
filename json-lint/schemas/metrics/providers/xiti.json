{
    "$id": "/properties/xiti",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "description": "Define Xiti as Metrics Provider",
    "title": "Xiti Metrics Provider",
    "type": "array",
    "items": {
        "additionalProperties": false,
        "properties": {
            "name": {
                "description": "Name of the metrics provider",
                "title": "Metrics Provider Name",
                "type": "string"
            },
            "site": {
                "type": "string"
            },
            "logs": {
                "type": "string"
            },
            "domain": {
                "type": "string"
            },
            "level2": {
                "type": "string"
            },
            "host": {
                "type": "string"
            },
            "platforms": {
                "$ref" : "../properties/platforms-all.json"
            }
        },
        "required": [
            "name",
            "site",
            "logs",
            "domain",
            "level2",
            "host"
        ]
    },
    "defaultSnippets": [
        {
            "body": [{
                "name": "$1",
                "site": "$2",
                "logs": "$3",
                "domain": "$4",
                "level2": "$2",
                "host": "$3"
            }]
        }
    ]
}
