{
    "$id": "/properties/comscore",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "description": "Define Comscore as Metrics Provider",
    "title": "Comscore Metrics Provider",
    "type": "array",
    "items": {
        "additionalProperties": false,
        "properties": {
            "name": {
                "description": "Name of the metrics provider",
                "title": "Metrics Provider Name",
                "type": "string"
            },
            "c2Var": {
                "type": "string"
            },
            "nsSite": {
                "type": "string"
            },"extraUrlParams": {
                "type": "object"
            },
            "platforms": {
                "$ref" : "../properties/platforms-all.json"
            }
        },
        "required": [
            "name",
            "c2Var"
        ]
    },
    "defaultSnippets": [
        {
            "body": [{
                "name": "$1",
                "c2Var": "$2"
            }]
        }
    ]
}
