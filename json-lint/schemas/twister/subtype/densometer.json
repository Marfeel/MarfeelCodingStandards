{
    "$schema": "http://json-schema.org/draft-07/schema#",

    "$id": "/subtype/densometer",
    "title": "Densometer",
    "description": "Configuration of ad density",

    "type": "object",
    "properties": {
        "enabled": {
            "title": "Enabled",
            "description": "Whether the density has to be limited or not",
            "type": "string",
            "enum": [
                "ACTIVE",
                "INACTIVE"
            ]
        },
        "densityFactor": {
            "title": "Density factor",
            "description": "If the densometer is enabled, maximum percentage of page that ads should cover",
            "type": "number",
            "minimum": 20
        }
    },
    "additionalProperties": false,
    "required": ["enabled", "densityFactor"]
}
