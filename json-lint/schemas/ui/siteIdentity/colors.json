{
    "$id": "#colors",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "title": "Colors",
    "description": "Configure the colours to be used in a tenants PWA",
    "additionalProperties": false,
    "required": [
        "scheme",
        "main",
        "secondary"
    ],
    "properties": {
        "scheme": {
            "type": "string",
            "title": "Color scheme",
            "description": "Define the color scheme to be used (LIGHT/DARK)",
            "enum": [
                "LIGHT",
                "DARK"
            ]
        },
        "main": {
            "type": "string",
            "title": "Main color",
            "description": "Define the main color",
            "pattern": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$"
        },
        "secondary": {
            "type": "string",
            "title": "Secondary color",
            "description": "Define the secondary color",
            "pattern": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$"
        }
    }
}