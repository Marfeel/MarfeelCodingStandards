{
    "MarfeelPath": "/resources/ui.json",
    "definitions": {},
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://example.com/example.json",
    "type": "object",
    "title": "UI JSON",
    "description": "Configure the appearance of a tenants PWA",
    "additionalProperties": true,
    "required": [
        "siteIdentity"
    ],
    "properties": {
        "extends": {
            "type": "string",
            "title": "Extends Path",
            "description": "Path of JSON that we want to extend."
        },
        "siteIdentity": {
            "type": "object",
            "title": "Site Identity",
            "description": "Define the colours and fonts to be used in a tenants PWA",
            "required": [
                "colors",
                "typography"
            ],
            "properties": {
                "colors": {
                    "$ref": "./siteIdentity/colors.json"
                },
                "typography": {
                    "$ref": "./siteIdentity/typography.json"
                },
                "mainLogoRatio": {
                    "type": "integer",
                    "title": "Main logo ratio",
                    "description": "Define the main logo ratio"
                }
            }
        }
    }
}