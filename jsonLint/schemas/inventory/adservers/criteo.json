{
    "$id": "#criteo",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "title": "Criteo adserver",
    "description": "https://github.com/ampproject/amphtml/blob/master/ads/criteo.md",
    "additionalProperties": false,
    
    "required": [
      "type",
      "zone"
    ],

    "defaultSnippets": [
      {
        "label": "Criteo template",
        "description": "contains required keys",
        "body": {
          "type": "criteo",
          "zone": "$1"
        }
      }
    ],

    "properties": {
      "type": {
        "enum": [ "criteo"]
      },
      "zone": {
        "type": "string",
        "title": "String of digits",
        "description": "Example : 567890",
        "pattern": "^(\\d|\\$\\{.+\\})+$"  
      },
      "width": {
        "type": "string",
        "title": "String of digits (not required, defautl in criteo.tag (300))",
        "description": "example: 300",
        "pattern": "^(\\d|\\$\\{.+\\})+$" 
      },
      "height": {
        "type": "string",
        "title": "String of digits (not required, default in criteo.tag (250))",
        "description": "example: 250",
        "pattern": "^(\\d|\\$\\{.+\\})+$" 
      }
    }
  }