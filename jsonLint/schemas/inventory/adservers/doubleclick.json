{
    "$id": "#doubleclick",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "title": "DoubleClick adserver",
    "description": "https://github.com/ampproject/amphtml/blob/master/extensions/amp-ad-network-doubleclick-impl/amp-ad-network-doubleclick-impl-internal.md",
    "additionalProperties": false,
    
    "required": [
      "type",
      "slot",
      "width",
      "height"
    ],

    "defaultSnippets": [
      {
        "label": "DoubleClick template",
        "description": "contains required keys",
        "body": {
          "type": "doubleclick",
          "slot": "$1",
          "width": "$2",
          "height": "$3"
        }
      }
    ],

    "properties": {
      "type": {
        "enum": [ "doubleclick"]
      },
      "slot": {
        "type": "string"
      },
      "width": {
        "type": "string",
        "title": "String of digits",
        "description": "example: 300",
        "pattern": "^(\\d|\\$\\{.+\\})+$" 
      },
      "height": {
        "type": "string",
        "title": "String of digits",
        "description": "example: 250",
        "pattern": "^(\\d|\\$\\{.+\\})+$" 
      },
      "layout": {
        "enum": [ "responsive"]
      },
      "json": {
        "type": "object",
        "properties": {
          "targeting" : {
            "type": "object"
          }
        }
      }
    }
  }